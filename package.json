{
  "name": "flex-erp-poc",
  "version": "1.0.0",
  "description": "Flex ERP Proof of Concept - Inventory Management System",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "build": "./scripts/build.sh",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "backend:dev": "cd backend && go build -o bin/flex-erp-backend ./cmd/server",
    "frontend:dev": "cd frontend && pnpm dev",
    "backend:build": "cd backend && go build -gcflags='all=-N -l' -o bin/server cmd/server/main.go",
    "frontend:build": "cd frontend && pnpm build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["erp", "inventory", "react", "golang", "poc"],
  "license": "MIT"
}
