{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/server/main.go",
      "env": {},
      "args": [],
      "cwd": "${workspaceFolder}/backend"
    }
    ,
    {
      "name": "Attach to Backend Debugger",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}
